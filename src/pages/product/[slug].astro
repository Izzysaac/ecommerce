---
import Layout from '../../layouts/Layout.astro';
import data from '@public/data.json';

export function getStaticPaths() {
  return data.map((item) => ({
    params: { slug: item.nombre.toLowerCase().replace(/\s+/g, '-').replace(/[^a-z0-9-]/g, '') },
    props: { item }
  }));
}

const { item } = Astro.props;
---

<Layout>
  <div>
    <h1>{item.nombre}</h1>
    <p><strong>Categoría:</strong> {item.categoria}</p>
    <p><strong>Descripción:</strong> {item.descripcion}</p>
    <p><strong>Precio:</strong> ${item.precio.toLocaleString()}</p>
    <p><strong>Estado:</strong> {item.estado}</p>
    
    {item.media.length > 0 && (
      <div>
        <h3>Imágenes:</h3>
        {item.media.map((img, index) => (
          <img src={img} alt={`${item.nombre} - Imagen ${index + 1}`} />
        ))}
      </div>
    )}
    
    <a href="/catalog">← Volver al catálogo</a>
  </div>
</Layout>
