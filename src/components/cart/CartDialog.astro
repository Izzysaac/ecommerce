---
import DeleteIcon from "@assets/delete.svg";
import CrossIcon from "@assets/cross.svg";
---

<dialog id="cart-dialog" class="cart-dialog">
	<div class="contenido flex flex-col">
		<div
			class="flex items-center justify-between bg-(--brand) px-3 py-2.5 text-(--on-brand)"
		>
			<h2 class="text-lg font-semibold">Pedido</h2>
			<button
				type="button"
				id="cart-close"
				class=""
				aria-label="Cerrar carrito"
			>
				<CrossIcon width={30} height={30} />
			</button>
		</div>

		<button type="button" id="cart-clear" class="ms-auto flex items-center p-3">
			Vaciar <DeleteIcon class="inline" />
		</button>

		<div id="cart-items" class="cart-items"></div>

	<div class="mt-auto mb-4 px-3 flex flex-col border-t border-(--brand)"> 
		<div class="flex justify-between py-3">
			<span>Total</span>
			<strong id="cart-total">$0</strong>
		</div>
		<a
			href="/checkout"
			class="w-full rounded-full bg-(--brand) py-2 text-center text-lg font-bold text-(--on-brand)"
			>Continuar con el pedido</a
		>
	</div>
</dialog>

<script src="/src/scripts/cart.js"></script>

<style>
	.contenido {
		min-height: 100%;
	}
	.cart-dialog {
		width: min(90vw, 500px);
		min-height: 100%;
		max-height: 100vh;
		margin-left: auto;
		color: var(--color-bg);
		background-color: var(--color-text);
		z-index: 100;

		/* NUEVO */
		display: none;
        translate: 100vw;

        transition-property: overlay, display, translate;
        transition-duration: 0.4s;
        transition-behavior: allow-discrete;
	}

	#cart-dialog[open] {
        display: block;
        translate: 0;
        @starting-style {
            translate: 100vw;
        }
    }

	.cart-dialog::backdrop {
		background: rgba(0, 0, 0, 0.5);
	}

	.cart-items {
		padding: 16px;
		display: flex;
		flex-direction: column;
		gap: 12px;
		max-height: 55vh;
		overflow: auto;
	}

	.empty {
		margin: 0;
		color: #6b7280;
	}
	.remove {
		border: none;
		background: transparent;
		cursor: pointer;
		font-size: 18px;
	}

	.cart-footer {
		border-top: 1px solid #e5e7eb;
		padding: 16px;
		display: grid;
		gap: 12px;
	}
</style>
